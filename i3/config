# vim: filetype=i3

###---Basic Definitions---###
#Needed for i3-gaps
hide_edge_borders both
for_window [class="^.*"] border pixel 0
new_window none
gaps inner 15
gaps outer 15
font pango:mono 20
set $mod Mod4
set $term terminator

#FOR ALSA/AMIXER
set $inc --no-startup-id amixer sset Master 2%+
set $biginc --no-startup-id amixer sset Master 20%+
set $dec --no-startup-id amixer sset Master 2%-
set $bigdec --no-startup-id amixer sset Master 20%-
set $mute --no-startup-id amixer sset Master toggle
set $truemute --no-startup-id amixer sset Master mute
set $screencast  --no-startup-id bash ~/.config/Scripts/screencast_alsa.sh
set $audio --no-startup-id bash ~/.config/Scripts/audio_alsa.sh

###---Basic Bindings---###
bindsym $mod+Return 		exec $term

bindsym $mod+Shift+Escape 	exec i3-msg exit

bindsym $mod+Shift+BackSpace	exec sudo reboot

bindsym $mod+space exec bash ~/.config/i3/scripts/toggleKBlayout.sh

#STOP/HIDE EVERYTHING:
bindsym $mod+Shift+Delete	exec $truemute ; exec $truepause ; workspace lmao ; exec $term -e htop ; exec $term -e ranger

###---Letter Key Bindings---###
bindsym $mod+q			kill
bindsym $mod+Shift+q		kill

#bindsym $mod+w			
